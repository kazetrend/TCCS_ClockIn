<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="WELCOME, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomemsg"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_compat_locked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOCK IN"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/welcomemsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_not_locked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOCK OUT"
        android:layout_marginTop="83dp"
        android:layout_alignTop="@+id/button_compat_locked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_change_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="82dp" />

    <Button
        android:id="@+id/button_unlock_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_alignTop="@+id/button_change_pin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/changeling"
        android:textSize="28sp"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:elevation="15dp"
        android:backgroundTint="@color/light_blue_500"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/button_not_locked"
        android:layout_alignParentStart="true" />

</RelativeLayout>
